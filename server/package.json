{
  "name": "smartcoach-backend",
  "version": "1.0.0",
  "description": "SmartCoach Backend API",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-test-data": "ts-node -r tsconfig-paths/register src/scripts/generate-test-data.ts"
